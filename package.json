{
  "name": "neurohome",
  "version": "0.1.0",
  "private": true,
  "description": "NeuroHome - AI-Powered Smart Home System with Edge Intelligence",
  "license": "MIT",
  "author": "NeuroHome Contributors",
  "workspaces": [
    "backend/services/*",
    "backend/api",
    "backend/gateway",
    "backend/data-pipeline",
    "clients/mobile",
    "clients/dashboard",
    "clients/wallpanel",
    "clients/cli",
    "tools/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "backend:dev": "npm run dev --workspace=backend/*",
    "gateway:dev": "npm run dev --workspace=backend/gateway",
    "api:dev": "npm run dev --workspace=backend/api",
    "dashboard:dev": "npm run dev --workspace=clients/dashboard",
    "cli:build": "npm run build --workspace=clients/cli",
    "simulator:run": "npm run start --workspace=tools/sim",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neurohome/neurohome.git"
  },
  "keywords": [
    "smart-home",
    "iot",
    "ai",
    "machine-learning",
    "edge-computing",
    "home-automation",
    "esp32",
    "tinyml",
    "emotional-ai"
  ]
}
